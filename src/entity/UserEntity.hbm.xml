<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UserEntity" table="user" schema="main">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="surname">
            <column name="surname" sql-type="text"/>
        </property>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="patronymic">
            <column name="patronymic" sql-type="text" not-null="true"/>
        </property>
        <property name="login">
            <column name="login" sql-type="text" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>